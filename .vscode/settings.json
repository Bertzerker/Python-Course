{
    // Prefer the project's .venv interpreter (create .venv at the workspace root)
    "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",

    // Auto-activate the selected interpreter in integrated terminals
    "python.terminal.activateEnvironment": true,

    // venv discovery path (helps the extension find the .venv)
    "python.venvPath": "${workspaceFolder}",

    ]
}